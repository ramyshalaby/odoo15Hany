        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_hr_department_resources_form" model="ir.ui.view">
            <field name="name">view.inherit.hr.department.resource.value.form</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">

                <!-- position values: after|before|replace|attributes|inside -->
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Resources Values">
                            <field name="resource_value_ids">
                                <tree editable="bottom">
                                    <field name="job_id"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="resource_value"/>
                                    <field name="uom_id" options="{'no_create': True}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>


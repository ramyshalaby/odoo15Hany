<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="view_project_deliverables_form" model="ir.ui.view">
            <field name="name">view.project.deliverables.form</field>
            <field name="model">project.deliverables</field>
            <field name="arch" type="xml">
                <form string="Project Deliverables Form">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Deliverable Description"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="discipline_id"/>
                                <field name="engineering_phase_id"/>
                            </group>
                            <group>
                                <field name="deliverable_type_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Remarks">
                                <field name="remarks"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_project_deliverables_tree" model="ir.ui.view">
            <field name="name">view.project.deliverables.tree</field>
            <field name="model">project.deliverables</field>
            <field name="arch" type="xml">
                <tree string="Project Deliverables Tree">
                    <field name="name"/>
                    <field name="discipline_id"/>
                    <field name="engineering_phase_id"/>
                    <field name="deliverable_type_id"/>
                </tree>
            </field>
        </record>

        <record id="action_project_deliverables_view" model="ir.actions.act_window">
            <field name="name">Project Deliverables</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.deliverables</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_project_deliverables_view" name="Project Deliverables" parent="project.menu_project_config"
                  action="action_project_deliverables_view" sequence="9"/>

        <record id="action_project_engineering_phase_view" model="ir.actions.act_window">
            <field name="name">Engineering Phase</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.engineering.phase</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">

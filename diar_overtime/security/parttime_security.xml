<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.module.category"
                id="module_category_human_resources_parttime_request">
            <field name="name">Parttime Request</field>
            <field name="description">Helps you manage Parttime Request.
            </field>
            <field name="sequence">15</field>
        </record>


        <record id="group_parttime_request_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
            <field name="category_id"
                   ref="module_category_human_resources_parttime_request"/>
        </record>

        <record id="group_parttime_request_officerr" model="res.groups">
            <field name="name">Officer</field>
            <field name="implied_ids" eval="[(4, ref('diar_overtime.group_parttime_request_user'))]"/>
            <field name="category_id"
                   ref="module_category_human_resources_parttime_request"/>
        </record>

        <record id="group_parttime_request_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id"
                   ref="module_category_human_resources_parttime_request"/>
            <field name="implied_ids"
                   eval="[(4, ref('group_parttime_request_officerr'))]"/>
        </record>


        <record id="base.user_admin" model="res.users">
            <field name="groups_id"
                   eval="[(4, ref('diar_overtime.group_parttime_request_manager'))]"/>
        </record>

        <record id="parttime_rule_role_user" model="ir.rule">
            <field name="name">User see only his parttime request</field>
            <field name="model_id" ref="model_hr_overtime"/>
            <field name="domain_force">[('request_type','=','parttime'),'|',('employee_id.user_id', '=', user.id),('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('diar_overtime.group_parttime_request_user'))]"/>
        </record>
        <record id="parttime_rule_role_officer" model="ir.rule">
            <field name="name">Officer see only his parttime request and his team</field>
            <field name="model_id" ref="model_hr_overtime"/>
            <field name="domain_force">[('request_type','=','parttime'),'|','|',('employee_id.user_id', '=', user.id),('employee_id.department_id.manager_id.user_id', '=', user.id),('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('diar_overtime.group_parttime_request_officerr'))]"/>
        </record>
        <record id="parttime_rule_role_manager" model="ir.rule">
            <field name="name">mamager see all parttime request</field>
            <field name="model_id" ref="model_hr_overtime"/>
            <field name="domain_force">[(1, '=', 1),('request_type','=','parttime')]</field>
            <field name="groups" eval="[(4, ref('diar_overtime.group_parttime_request_manager'))]"/>
        </record>
    </data>
</odoo>